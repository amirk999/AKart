<li class="span4">
  <div class="thumbnail">
    <%= link_to product_path(product) do %>
      <img src="http://placehold.it/320x200" alt="ALT NAME" />
    <% end %>
    <div class="caption">
      <h3><%= link_to product.name, product_path(product) %></h3>
      <p><strong><%= number_to_currency product.price %></strong></p>
    </div>
  </div>
</li>