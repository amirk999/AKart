<li class="span4">
  <div class="thumbnail">
    <%= link_to product_path(product) do %>
			<%= image_tag product.main_image.image.url(:main) %>
    <% end %>
    <div class="caption">
      <h3><%= link_to product.name, product_path(product) %></h3>
      <p><strong><%= number_to_currency product.price %></strong></p>
    </div>
  </div>
</li>