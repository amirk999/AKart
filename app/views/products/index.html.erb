<% provide(:title, "Products") %>

<div class="items">
  <div class="container">
    <div class="row">

   		<div class="span12">
   			<h4 class="pull-left">All Products</h4>
   			<div class="clearfix"></div>
   			<div class="row">
   				<% @products.each do |product| %>
						<%= render "shared/product", :product => product %>
   				<% end %>
   			</div>

				<% if (current_user) && (current_user.has_role? :admin) %>
					<hr>
					<%= link_to "New product", new_product_path, :class => "btn btn-success icon" %>
				<% end %>
   		</div>
    </div>
  </div>
</div>


