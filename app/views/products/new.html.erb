<% provide(:title, "New Product") %>
  <script type="text/javascript">
  $('.wysihtml5').each(function(i, elem) {
    $(elem).wysihtml5();
  });
</script>
<div class="center jumbotron">
	<h1>New Product</h1>

	<div class="row">
  <div class="span6 offset3">
    <%= form_for(@product) do |f| %>
      <%= render 'shared/product_error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :sku %>
      <%= f.text_field :sku %>

      <%= f.label :description %>
      <%= f.text_area :description, class: 'wysihtml5' %>

      <%= f.label :category_id %>
      <%= collection_select(:product, :category_id, Category.all, :id, :name, 
                            :prompt => 'Please select a category') %>

      <%= f.label :price %>
      <%= f.text_field :price %>

			<%= f.label :visible %>
      <%= f.check_box :visible %><br /><br />

      <%= f.submit "Create product", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
</div>