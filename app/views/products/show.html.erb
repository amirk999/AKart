<% provide(:title, @product.name) %>
<div class="center jumbotron">
	<h1><%= @product.name %></h1>
	<h4><%= number_to_currency @product.price %></h4>
</div>
<hr>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span2">
      <div class="row">
        <%= link_to @product.main_image.image.url(:popout), :class => "gallery", 
                              :data => { :colorbox => true } do %>
          <%= image_tag @product.main_image.image.url(:small) %>
        <% end %> 
      </div>
      <br />
      <% @product.additional_images.each do |image| %>
        <div class="row">
          <%= link_to image.image.url(:popout), :class => "gallery", 
                              :data => { :colorbox => true } do %>
          <%= image_tag image.image.url(:small) %>
        <% end %> 
        </div>
        <br />
      <% end %>
    </div>
    <div class="span10">
      <h2><%= @product.description.html_safe %></h2>
      <hr>
      <%= render 'product' %>
    </div>
  </div>
</div>
<% if (current_user) && (current_user.has_role? :admin) %>
  <hr>
	<%= link_to "Edit", edit_product_path(@product), :class => "btn btn-primary icon" %>
	<%= link_to "Delete", @product, :method => :delete, 
																	:class => "btn btn-danger icon", 
																	:confirm => "Are you sure?" %>
<% end %>