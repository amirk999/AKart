<% provide(:title, @category.name) %>
<div class="jumbotron">
	<h1><%= @category.name %></h1>

	<ul class="thumbnails">
	<% @products.each do |product| %>
		<%= render "shared/product", :product => product %>
	<% end %>
	</ul>
	
	<% if (current_user) && (current_user.has_role? :admin) %>
		<hr>
		<%= link_to "New product", new_product_path(:cat_id => @category),
											:class => "btn btn-success icon" %>
		<%= link_to "Edit", edit_category_path(@category), 
											:class => "btn btn-primary icon" %>
		<%= link_to "Delete", @category,
											:method => :delete,
											:class => "btn btn-danger icon",
											:confirm => "Are you sure?" %>
	<% end %>
</div>