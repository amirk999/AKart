<div class="container flex-main">
  <div class="row">
    <div class="span12">
            
      <div class="flex-image flexslider">
        <ul class="slides">
          <% Product.includes(:slider_image).where('images.product_slider_id IS NOT NULL').order('products.id DESC').limit(5).each do |product| %>
          
            <li>
              <%= image_tag product.slider_image.image.url(:slider) %>
              <div class="flex-caption">
                <h3><%= product.name %><h3>
                <p><%= truncate_html product.description, :length => 75 %></p>
                <div class="button">
                  <%= link_to "Buy", product %>
                </div>
              </div>
            </li>

          <% end %>          
        </ul>
      </div>

    </div>
  </div>
</div>